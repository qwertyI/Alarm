<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColorHighlight="#CCCCCC"
            android:id="@+id/music_name_tv"
            android:hint="@string/no_music"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:id="@+id/music_name_et"
            android:hint="@string/music"
            android:editable="false"
            android:singleLine="true"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerInside"
            android:background="@drawable/btn_add"
            android:id="@+id/select_music_btn"
            android:text="@string/select_music"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="22dp"
                android:id="@+id/alarm_time_tv"
                android:hint="@string/alarm_time"/>

            <Switch
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/switch_alarm_sth"
                android:text="@string/create_alarm"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
